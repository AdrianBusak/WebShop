@model WebShop.MVC.ViewModels.ProductDetailsVM

@{
    ViewData["Title"] = "Detalji proizvoda";
}

<h2 class="mb-4">Detalji proizvoda</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <h5>Naziv:</h5>
                <p>@Model.Name</p>

                <h5>Opis:</h5>
                <p>@Model.Description</p>

                <h5>Cijena:</h5>
                <p>@Model.Price.ToString("C")</p>

                <h5>Kategorija:</h5>
                <p>@Model.CategoryName</p>

                <h5>Brand:</h5>
                <p>@Model.Brand</p>

                <h5>Zemlje dostupnosti:</h5>
                <p>@string.Join(", ", Model.CountryNames)</p>
            </div>

            <div class="col-md-6">
                <h5>Slike:</h5>
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="row">
                        @foreach (var image in Model.Images)
                        {
                            <div class="col-md-6 mb-3">
                                <img src="@image" alt="Slika proizvoda" class="img-fluid rounded border" style="max-height: 200px;" />
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Nema slika za ovaj proizvod.</p>
                }
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Uredi</a>
            <a asp-action="Index" class="btn btn-secondary">Natrag na popis</a>
        </div>
    </div>
</div>
