@model WebShop.MVC.ViewModels.SearchVM
@{
    ViewData["Title"] = "Proizvodi";
}
<link href="~/css/userProduct.css" rel="stylesheet" />

<h2 class="mb-4">Proizvodi</h2>

<form asp-action="Search" method="GET" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <input name="Q" value="@Model.Q" class="form-control" placeholder="Pretraži proizvod..." />
        </div>

        <div class="col-md-2">
            <select name="OrderBy" class="form-select">
                <option value="id" selected="@(Model.OrderBy == "id")">Sortiraj po</option>
                <option value="Title" selected="@(Model.OrderBy == "Title")">Naziv</option>
                <option value="Price" selected="@(Model.OrderBy == "Price")">Cijena</option>
                <option value="Category" selected="@(Model.OrderBy == "Category")">Kategorija</option>
            </select>
        </div>

        <div class="col-md-2">
            <select name="Size" class="form-select">
                @foreach (var size in new[] { 3, 5, 10, 20 })
                {
                    <option value="@size" selected="@(Model.Size == size)">@size</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <input type="submit" value="Traži" class="btn btn-primary w-100" />
        </div>
    </div>
</form>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model.Products)
    {
        <div class="col">
            <div class="card h-100 shadow-sm product-card" data-image-index="0">
                <div class="position-relative" style="height: 200px; overflow: hidden;">
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@item.Images.First()" class="card-img-top product-image" alt="Slika" />
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center h-100 bg-light text-muted">Nema slike</div>
                    }
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.CategoryName - @item.Brand</p>
                    <p class="card-text text-success fw-bold">@item.Price.ToString("0.00") €</p>

                    <input type="number" min="1" value="1" class="form-control quantity-input mb-2" data-id="@item.Id" />

                    <div class="d-flex gap-2 mt-auto">
                        <button class="btn btn-sm btn-success w-100 btn-add" data-id="@item.Id">Dodaj u košaricu</button>
                        <a class="btn btn-sm btn-outline-primary w-100" asp-action="Details" asp-controller="UserProduct" asp-route-id="@item.Id">Detalji</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.LastPage > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.LastPage; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link" asp-action="Search" asp-route-Page="@i" asp-route-Q="@Model.Q" asp-route-OrderBy="@Model.OrderBy" asp-route-Size="@Model.Size">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/cart.js"></script>
